const LOADING_STEPS = [
  { icon: 'ğŸ“Š', text: 'Analisando perfil da empresa' },
  { icon: 'ğŸ”', text: 'Mapeando gargalos operacionais' },
  { icon: 'ğŸ’°', text: 'Calculando impacto financeiro' },
